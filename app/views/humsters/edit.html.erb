<section class="hero is-white">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        募集詳細編集<hr>
      </h1>
    </div>
  </div>
</section>

<% if @humster.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@humster.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @humster.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @humster do |f| %>
          <div class="field">
            <%= f.label :title, "ハムスターの種類", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "詳細", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.file_field :image, class: "input" %>
          </div>

          <%= f.submit '更新', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
